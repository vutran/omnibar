{
    "name": "omnibar",
    "version": "0.1.0",
    "description": "Extensible search component for React.",
    "main": "./dist/lib.js",
    "types": "./typings/index.d.ts",
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/vutran/omnibar.git"
    },
    "scripts": {
        "build-lib": "rollup -c",
        "build-example": "NODE_ENV=development webpack --config docs/webpack.config.js",
        "build": "npm run build-lib && npm run build-example",
        "dev": "NODE_ENV=development webpack-dev-server --config docs/webpack.config.js --inline",
        "prepublish": "npm run build",
        "jest": "jest --coverage --verbose",
        "test": "npm run jest",
        "start": "npm run dev"
    },
    "keywords": [
        "omnibar",
        "search",
        "navigator"
    ],
    "author": "Vu Tran <vu@vu-tran.com>",
    "license": "MIT",
    "peerDependencies": {
        "react": "^15.5.4",
        "react-dom": "^15.5.4"
    },
    "devDependencies": {
        "@types/highlight.js": "^9.1.9",
        "@types/jest": "^19.2.3",
        "@types/mathjs": "^0.0.34",
        "@types/node": "^7.0.18",
        "@types/react": "^15.0.24",
        "@types/react-dom": "^15.5.0",
        "babel-jest": "^20.0.1",
        "babel-loader": "^7.0.0",
        "babel-preset-es2015": "^6.24.1",
        "css-loader": "^0.28.1",
        "highlight.js": "^9.11.0",
        "jest": "^20.0.1",
        "mathjs": "^3.13.1",
        "react": "^15.5.4",
        "react-dom": "^15.5.4",
        "rollup": "^0.41.6",
        "rollup-plugin-typescript": "^0.8.1",
        "style-loader": "^0.17.0",
        "ts-jest": "^20.0.3",
        "ts-loader": "^2.0.3",
        "typescript": "^2.3.2",
        "webpack": "^2.5.1",
        "webpack-dev-server": "^2.4.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "transform": {
            ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$"
    }
}
